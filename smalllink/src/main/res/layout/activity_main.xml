<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white">
    <TextView
        android:id="@+id/tx_wifiName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hello World!"
        android:textColor="@color/text_color_black"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tx_wifiName"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/text_color_black"
        android:maxLines="1"
        android:hint="请输入wifi密码"
        android:textColorHint="@color/gray"
         />
    <Button
        android:id="@+id/bt_send_wifi"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_pwd"
        android:layout_centerHorizontal="true"
        android:text="send wifi"
        android:textColor="@color/text_color_black"
        android:background="@color/gray"/>
    <Button
        android:id="@+id/bt_stop"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bt_send_wifi"
        android:layout_centerHorizontal="true"
        android:text="stop"
        android:textColor="@color/text_color_black"
        android:background="@color/gray"/>
    <EditText
        android:id="@+id/et_msg"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bt_stop"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/text_color_black"
        android:maxLines="1"
        android:hint="请输入与设备通信的信息"
        android:textColorHint="@color/gray"
        />
    <Button
        android:id="@+id/bt_send_msg"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_msg"
        android:layout_centerHorizontal="true"
        android:text="send msg to device"
        android:textColor="@color/text_color_black"
        android:background="@color/gray"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bt_send_msg"
        >
    <TextView
        android:id="@+id/tx_receive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/text_color_black"
        />
    </ScrollView>
</RelativeLayout>
